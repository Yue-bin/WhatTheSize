<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="clr-namespace:WhatTheSize"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="WhatTheSize.MainWindow"
    x:DataType="root:MainWindow"
    Title="WhatTheSize">
    <Grid RowDefinitions="*,Auto,*"
        ColumnDefinitions="*,Auto,*">
        <Panel Grid.Column="1" Grid.Row="1">
            <TextBlock Text="{Binding WindowSizeText}"
                Foreground="White"
                FontSize="48" />
            <CheckBox Content="Is Frozen"
                IsChecked="{Binding IsFrozen}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
        </Panel>
    </Grid>
</Window>